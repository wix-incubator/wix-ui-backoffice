{
  "private": false,
  "name": "wix-ui-backoffice",
  "description": "Components for Wix backoffice applications",
  "version": "1.0.0",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "files": [
    "dist",
    "*.js",
    "*.d.ts",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui-backoffice.git"
  },
  "scripts": {
    "build": "haste build && import-path --path src/components --dts",
    "pretest": "npm run build && build-storybook",
    "test": "haste test --jest && npm run test:e2e",
    "posttest": "haste lint",
    "test:watch": "haste test --jest --watch",
    "test:e2e": "haste test --protractor",
    "start": "haste start --no-test & npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "wix-ui-core": "latest",
    "wix-ui-theme": "latest"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.3.7",
    "@storybook/react": "^3.3.7",
    "@types/jest": "^22.1.1",
    "@types/react": "^15.6.8",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eyes.it": "latest",
    "gh-pages-auto-release": "latest",
    "haste-preset-yoshi": "latest",
    "import-path": "latest",
    "prop-types": "^15.6.0",
    "protractor": "^5.3.0",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "ts-jest": "^22.0.3",
    "typescript": "^2.6.2",
    "wix-storybook-utils": "latest",
    "wix-ui-icons-common": "latest",
    "wix-ui-test-utils": "latest"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(st.css)$": "stylable-integration/jest"
    },
    "transformIgnorePatterns": [
      "postcss-safe-parser"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "setupFiles": [
      "<rootDir>/test/enzyme-setup.js"
    ]
  },
  "haste": {
    "preset": "yoshi"
  }
}
