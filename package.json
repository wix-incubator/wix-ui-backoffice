{
  "private": false,
  "name": "wix-ui-backoffice",
  "version": "1.0.0",
  "description": "Components for Wix backoffice applications",
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui.git"
  },
  "scripts": {
    "build": "haste build && import-path --path src/components",
    "precommit": "haste lint",
    "pretest": "npm run build && build-storybook",
    "test": "haste test --jest && haste test --protractor",
    "posttest": "haste lint",
    "start": "haste start & npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.22.0",
    "lodash": "^4.17.4",
    "wix-ui-core": "^1.0.8",
    "wix-ui-theme": "^1.0.16"
  },
  "devDependencies": {
    "@storybook/addon-options": "3.2.13",
    "@storybook/react": "~3.1.0",
    "@storybook/storybook-deployer": "~2.0.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-3": "^6.5.0",
    "enzyme": "^2.3.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.8.0",
    "gh-pages-auto-release": "^1.1.2",
    "identity-obj-proxy": "^3.0.0",
    "import-path": "^0.0.11",
    "prop-types": "^15.5.4",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "wix-ui-test-utils": "^1.0.0",
    "haste-preset-yoshi": "latest"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "extends": "wix/react",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-handler-names": 0,
      "react/no-find-dom-node": 0,
      "react/no-string-refs": 0,
      "react/jsx-boolean-value": 2,
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "yoshi": {
    "entry": {
      "app": "index.js"
    },
    "externals": {
      "react": "React"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/node_modules/babel-polyfill"
    ],
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/dist/src/jest-setup",
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "haste": {
    "preset": "yoshi"
  }
}
