{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "strict": false,
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "*"],
      "protractor": ["src/protractor.d.ts"] // Fix protractor issue https://github.com/angular/protractor/issues/5348
    }
  },
  "include": [
    "./node_modules/wix-ui-core/dist/src/globals.d.ts",
    "./node_modules/wix-ui-core/dist/src/types.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
